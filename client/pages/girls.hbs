<body>
  <main class='main container'>
    {{>header this.info}}
    <div class='wrapper'>
      {{#each data}}
        <form id={{this.id}} class='wrapperInner' method='dialog'>
          <div class='phraseBlock'>
            <h5 class='phraseTitle questionBlockTitle'>№{{this.id}}</h5>
            <p class='blockText'>{{this.text}}</p>
            {{!-- prettier-ignore --}}
            <input id={{this.id}}  name='answerPrepod' type='text' class='input answerPrepod answerName' placeholder='Имя' value=''/>
            <span class='inputCorrectVar d-none'>{{this.correct}}</span>
          </div>
          <p id={{this.id}} class='correctAnswers d-none'>{{this.vars}}</p>

          {{!-- prettier-ignore --}}
          <button id={{this.id}} type="submit" class='btn btn-primary mt-3 f-14 checkAnswersBtn'>Проверить</button>

          <div class='hintBlock'>
            <div class='hintHeader'>
              {{!-- prettier-ignore --}}
              <svg xmlns='http://www.w3.org/2000/svg' width='20' height='20' fill='currentColor' class='bi bi-info-circle' viewBox='0 0 16 16'>
                <path d='M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z'></path>
                <path d='m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z'></path>
              </svg>
              <h4 class='hintTitle'>Подсказка <span> -30 очков </span></h4>
            </div>
            <p id={{this.id}} class='hintText'>{{this.hint}}</p>
          </div>
        </form>
        <hr />
      {{/each}}
    </div>
    <div class='d-flex justify-content-around w-100'>
      <a href='/' class='btn btn-secondary mt-3 f-14 goBackBtn'>Назад</a>
      <button class='btn btn-primary mt-3 f-14 btnSuccessForms'>Подтвердить</button>
    </div>
  </main>
  <script src='client/assets/js/girls.js'></script>
</body>