<body>
    <main class="main container">
      <h2 class='pageTitle'>Найди лишнее</h2>
      <hr>
      <div class="wrapper">
        {{#each data}}
        <div class="wrInner">
          <h4 class="">Задание {{this.id}}</h4>
          <form class="form formAnswers">
            <div class="formInner">
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="flexRadioDefault"
                  value={{this.var1}}
                />
                <label class="form-check-label" for="flexRadioDefault1">{{this.var1}}</label>
              </div>
              <div class="form-check">
                <input
                  class="form-check-input"
                  type="radio"
                  name="flexRadioDefault"
                  value={{this.var2}}
                />
                <label class="form-check-label" for="flexRadioDefault2">{{this.var2}}</label>
              </div>
              <div class="form-check bottom">
                <input
                  class="form-check-input"
                  type="radio"
                  name="flexRadioDefault"
                  value={{this.var3}}
                />
                <label class="form-check-label" for="flexRadioDefault2">{{this.var3}}</label>
              </div>
              <div class="form-check bottom">
                <input
                  class="form-check-input"
                  type="radio"
                  name="flexRadioDefault"
                  value={{this.var4}}
                />
                <label class="form-check-label" for="flexRadioDefault2">{{this.var4}}</label>
              </div>
            </div>
          </form>
          {{!-- Здесь первое слово из предложения потому что inp.value выдает одно слово --}}
          <div class="correctAnswer d-none">{{this.correct}}</div> 
        </div>
        <hr>   
        {{/each}}
      </div>
        <div class="d-flex justify-content-around w-100">
          <a href="/" class="btn btn-secondary mt-3  f-14 goBackBtn">Назад</a>
          <button class="btn btn-primary mt-3 f-14 checkAnswersBtn">Подтвердить</button>
        </div>
    </main>
    <script src="../assets/js/naidiLishnee.js"></script>
  </body>
</html>
