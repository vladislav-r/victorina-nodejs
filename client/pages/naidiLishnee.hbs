<body>
    <main class="main container">
      {{> header this.info}}
      <div class="wrapper">
        {{#each data}}
        <div class="wrInner">
          <div class="questionBlock">
            <h5 class="questionBlockTitle">Задание №{{this.id}}</h5>
            <p class="text">{{this.text}}</p>
            {{#if this.img}}
            <div class="imgDiv big">
              <button class="transparentBtn img1"></button>
              <button class="transparentBtn img2"></button>
              <img src={{this.img}} alt="Без картинки">
            </div>
            {{/if}}
         </div>
          <form class="form formAnswers">
            <div class="formInner">
              {{#each this.vars}}
                <div class="formItem">
                  <input
                    class="formRadio"
                    type="radio"
                    name="flexRadioDefault"
                    value={{this}}
                  />
                  <label class="formLabel" for="flexRadioDefault1">{{this}}</label>
                </div>
              {{/each}}
            </div>
          </form>
          {{!-- Здесь первое слово из предложения потому что inp.value выдает одно слово --}}
          <div class="correctAnswer d-none">{{this.correct}}</div> 
        </div>
        <hr>   
        {{/each}}
      </div>
        <div class="d-flex justify-content-around w-100">
          <a href="/" class="btn btn-secondary mt-3  f-14 goBackBtn">Назад</a>
          <button class="btn btn-primary mt-3 f-14 checkAnswersBtn">Подтвердить</button>
        </div>
    </main>
    <script src="client/assets/js/naidiLishnee.js"></script>
  </body>
</html>
