<body>
    <main class="main container">
      <h2 class='pageTitle'>Загадки Тюняева</h2>
      <hr>
      <div class="wrapper">
        {{#each data}}
        <div class="wrInner">
          <div class="questionBlock">
            <h4 class="questionBlockTitle">Загадка №{{this.id}}</h4>
            <p class="blockText">{{this.text}}</p>
         </div>
        <form class="form formAnswers">
          <div class="formInner">
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="flexRadioDefault"
                value={{this.var1}}
              />
              <label class="form-check-label" for="flexRadioDefault1">{{this.var1}}</label>
            </div>
            <div class="form-check">
              <div class="form-check-innerDiv right">
              <input
                class="form-check-input"
                type="radio"
                name="flexRadioDefault"
                value={{this.var2}}
              />
              <label class="form-check-label" for="flexRadioDefault2">{{this.var2}}</label>
              </div>
            </div>
            <div class="form-check">
              <input
                class="form-check-input"
                type="radio"
                name="flexRadioDefault"
                value={{this.var3}}
              />
              <label class="form-check-label" for="flexRadioDefault2">{{this.var3}}</label>
            </div>
            <div class="form-check">
              <div class="form-check-innerDiv right">
              <input
                class="form-check-input"
                type="radio"
                name="flexRadioDefault"
                value={{this.var4}}
              />
              <label class="form-check-label" for="flexRadioDefault2">{{this.var4}}</label>
              </div>
            </div>
          </div>
        </form>
        <div class="correctAnswer d-none">{{this.correct_var}}</div>
        <div class="hintBlock">
          <!-- prettier-ignore -->
          <div class="hintHeader">
          <svg xmlns="http://www.w3.org/2000/svg" width="20" height="20" fill="currentColor" class="bi bi-info-circle" viewBox="0 0 16 16">
            <path d="M8 15A7 7 0 1 1 8 1a7 7 0 0 1 0 14zm0 1A8 8 0 1 0 8 0a8 8 0 0 0 0 16z" />
            <path d="m8.93 6.588-2.29.287-.082.38.45.083c.294.07.352.176.288.469l-.738 3.468c-.194.897.105 1.319.808 1.319.545 0 1.178-.252 1.465-.598l.088-.416c-.2.176-.492.246-.686.246-.275 0-.375-.193-.304-.533L8.93 6.588zM9 4.5a1 1 0 1 1-2 0 1 1 0 0 1 2 0z" />
          </svg>
          <h4 class="hintTitle">Подсказка</h4>
          </div>
          <p class="hintText">
            {{this.hint}}
          </p>
          <hr>
        </div>
        </div>   
        {{/each}}
      </div>
        <div class="d-flex justify-content-around w-100">
          <a href="/" class="btn btn-secondary mt-3  f-14 goBackBtn">Назад</a>
          <button class="btn btn-primary mt-3 f-14 checkAnswersBtn">Подтвердить</button>
        </div>
    </main>
    <script src="../assets/js/zagadkiTunaev.js"></script>
  </body>
</html>
